<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
      <referenceBlock name='order_info'>
        <action method="setTemplate">
          <argument name='template' xsi:type='string'>Pakettikauppa_Logistics::order/view/info.phtml</argument>
        </action>
        <block class="Pakettikauppa\Logistics\Block\Adminhtml\Order\View\OrderDetailsView" name="sales_order_view_custom" template="order/view/pakettikauppa_order_details.phtml"/>
      </referenceBlock>
      <referenceBlock name='order_shipping_view'>
        <action method="setTemplate">
          <argument name='template' xsi:type='string'>Pakettikauppa_Logistics::order/view/shipping_info.phtml</argument>
        </action>
      </referenceBlock>
    </body>
</page>
